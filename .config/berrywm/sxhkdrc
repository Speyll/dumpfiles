#
# wm independent hotkeys
#

# terminal emulator
super + {Return, + shift + Return}
        {urxvt, urxvt -e tmux}

# program launcher
super + {d,n}
        {dmenu_run -p 'uwu what`s this ?',dmenubar}

# make sxhkd reload its configuration files:
super + Escape
        pkill -USR1 -x sxhkd

# browser
super + shift + b
        firefox-esr

# pcmanfm
super + shift + p
        urxvt -e nnn

# lemonbar
#super + shift + r
#       pkill lemonbar | pkill bar | pkill sleep | bar

# script launcher
super + shift + s
        scriptlaunch

#
# berry hotkeys
#

super + {Left, Down, Up, Right}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {Left, Down, Up, Right}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {ampersand,eacute,quotedbl}
    berryc switch_workspace {1-3}

super + {_,shift + }{ampersand,eacute,quotedbl}
    berryc send_to_workspace {1-3}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super +  p
    berryc snap_right

super + o 
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + shift + a
    berryc window_close

super + c
    berryc window_center

~button1
berryc pointer_focus
