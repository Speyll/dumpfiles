# window
autofit-smaller=60%x60%
autofit-larger=60%x60%

# video control
keep-open=yes
pause=yes
volume=50
screenshot-directory='~~desktop/'

# cache
cache=yes
cache-secs=180

# youtube-dl / hardware acceleration
ytdl-format=best[height<=?480]+bestaudio/best
hwdec=vdpau
# hwdec=nvdec
hwdec-codecs=all

# osd
osd-playing-msg = '${filename}'
[protocol.https]
osd-playing-msg = '${media-title}'
